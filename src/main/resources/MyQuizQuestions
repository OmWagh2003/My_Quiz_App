CREATE TABLE question (
    id INT PRIMARY KEY AUTO_INCREMENT,
    category VARCHAR(50),
    difficulty VARCHAR(20),
    question TEXT,
    option1 VARCHAR(200),
    option2 VARCHAR(200),
    option3 VARCHAR(200),
    option4 VARCHAR(200),
    correctans VARCHAR(200)
);



